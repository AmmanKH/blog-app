<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Blogs</title>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container mt-4">
    <% if (blogs && blogs.length > 0) { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% blogs.forEach(blog => { %>
          <div class="col">
            <div class="card h-100">
              <% if (blog.coverImageURL) { %>
                <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="Cover Image" style="max-height: 200px; object-fit: cover;">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <button onclick="location.href='/blog/<%= blog._id %>'" class="btn btn-primary">Go to Blog</button>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p>No blog posts found.</p>
    <% } %>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
