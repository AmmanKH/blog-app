<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('./partials/head') %>
    <title>Add Blog</title>
</head>

<body>
  <%- include('./partials/nav') %>
    <div>
      <form action="/blog/add-new" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
        </div>
        
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
        </div>

        <div class="mb-3">
          <label for="body" id="body" class="form-label">Body</label>
<textarea class="form-control" id="content" name="content" rows="6" style="white-space: pre-wrap;"></textarea>
        </div>
        <div class="mb-3">
          <button class="btn-info"> Submit </button>
        </div>
      </form>
    </div>
    <%- include('./partials/scripts') %>

</body>

</html>